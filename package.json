{
  "name": "reset-grid",
  "version": "1.0.0",
  "description": "A modern css reset with a built-in Bootstrap grid.",
  "author": "Lucas Banegas <conobanegas@gmail.com>",
  "license": "MIT",
  "keywords": [
    "grid",
    "grid.css",
    "reset",
    "reset.css",
    "normalize",
    "normalize.css",
    "bootstrap",
    "bootstrap.css"
  ],
  "homepage": "https://github.com/arfreelance/reset-grid#readme",
  "repository": "https://github.com/arfreelance/reset-grid",
  "bugs": "https://github.com/arfreelance/reset-grid/issues",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "test:eslint": "eslint --color --fix --no-error-on-unmatched-pattern ./**/*.js",
    "test:package": "npx npm-package-json-lint --allowEmptyTargets --configFile .packagerc.json .",
    "test:prettier": "prettier --color --log-level=error --no-error-on-unmatched-pattern --write ./**/*.{css,js,json,md,scss}",
    "test:stylelint": "stylelint --color --fix --allow-empty-input ./**/*.{css,scss}",
    "test:parallel": "run-p test:eslint test:stylelint",
    "test": "run-s test:package test:parallel test:prettier"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@stylelint/npm-package-json-lint-config": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "gulp": "^5.0.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "npm-package-json-lint": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.1",
    "stylelint-config-twbs-bootstrap": "^14.2.0"
  }
}
